<UserControl x:Class="ComputerNetworksCourseWork.Graphs.Controls.GraphControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerNetworksCourseWork.Graphs.Controls"
             xmlns:gv="clr-namespace:Microsoft.Msagl.GraphViewerGdi;assembly=Microsoft.Msagl.GraphViewerGdi"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderBrush="Black"
            BorderThickness="1">

        <WindowsFormsHost Name="GViewerHost">

            <gv:GViewer x:Name="GViewer" 
                        ToolBarIsVisible="False" />

        </WindowsFormsHost>

    </Border>

</UserControl>
