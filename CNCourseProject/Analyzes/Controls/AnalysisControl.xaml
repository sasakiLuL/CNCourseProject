<UserControl x:Class="ComputerNetworksCourseWork.Analyzes.Controls.AnalysisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerNetworksCourseWork.Analyzes.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Analyze"
                   TextWrapping="Wrap"
                   Height="40"
                   FontSize="22"
                   FontWeight="Bold"/>
        
        <StackPanel Grid.Row="1"
                    Orientation="Vertical"
                    Margin="0,0,0,0">

            <StackPanel Orientation="Horizontal">

                <TextBlock Text="First node: "
                           FontSize="14"
                           Margin="0,0,10,0"/>

                <ComboBox Name="FirstNodeCombo"
                          Width="49"
                          ItemsSource="{Binding Path=Analysis.Network.Nodes, Mode=OneWay}"
                          SelectedItem="{Binding Path=Analysis.Source, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Id}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,5,0,0">

                <TextBlock Text="Second node: "
                           FontSize="14"
                           Margin="0,0,10,0"/>

                <ComboBox Name="SecondNodeCombo"
                          Width="49"
                          ItemsSource="{Binding Path=Analysis.Network.Nodes, Mode=OneWay}"
                          SelectedItem="{Binding Path=Analysis.Sink, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Id}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

            </StackPanel>

        </StackPanel>
        
        <StackPanel Grid.Row="2">

            <TextBlock Text="Modified FFA method simulation"
                       TextWrapping="Wrap"
                       Height="50"
                       FontSize="18"
                       FontWeight="Bold"/>

            

            <StackPanel HorizontalAlignment="Left" 
                        Orientation="Horizontal"
                        Margin="0,10,0,0">

                <TextBlock Text="Flow: "
                           FontSize="14"
                           Margin="0,0,5,0"/>
                <TextBlock x:Name="FlowBox"
                           FontSize="14"
                           Margin="5,0,0,0"
                           Text="{Binding Path=Analysis.MaxFlow, Mode=OneWay}"/>

            </StackPanel>

            <StackPanel HorizontalAlignment="Left" 
                        Orientation="Horizontal"
                        Margin="0,10,0,0">

                <TextBlock Text="Step: "
                           FontSize="14"
                           Margin="0,0,5,0"/>
                <TextBlock x:Name="StepBox"
                           FontSize="14"
                           Margin="5,0,0,0"
                           Text="{Binding Path=Analysis.Step, Mode=OneWay}"/>

            </StackPanel>

            <StackPanel HorizontalAlignment="Left" 
                        Orientation="Horizontal"
                        Margin="0,10,0,0">

                <TextBlock Text="Is finished: "
                           FontSize="14"
                           Margin="0,0,5,0"/>
                <TextBlock FontSize="14"
                           Margin="5,0,0,10"
                           Text="{Binding Path=Analysis.IsFinished, Mode=OneWay}"/>

            </StackPanel>

            <StackPanel Orientation="Horizontal">

                <Button Content="Reset" 
                        Width="100"
                        Height="32"
                        Margin="10,0,0,0"
                        Click="OnResetFFAClickedHandler"/>

                <Button Content="Next Iteration"
                        Width="100"
                        Height="32"
                        Margin="10,0,10,0"
                        Click="OnNextIterationClickedHandler"/>

            </StackPanel>
            
        </StackPanel>

        <StackPanel Grid.Row="3"
                    Margin="0,10,0,0">

            <TextBlock Text="Find optimal path"
                   TextWrapping="Wrap"
                   Height="40"
                   FontSize="18"
                   FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal">

                <Button Content="Reset" 
                        Width="100"
                        Height="32"
                        Margin="10,0,0,0"
                        Click="OnFindOptimalPathResetClickedHandler"/>

                <Button Content="Find"
                        Width="100"
                        Height="32"
                        Margin="10,0,10,0"
                        Click="OnFindOptimalPathClickedHandler"/>

            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
